{% extends 'layouts/backend.html.twig' %}

{% block title %}
    Редакция на категория
{% endblock %}

{% block mainContent %}
    <h1>Редакция на категория</h1>
    <div class="row">
        <div class="col-md-7">
        {{ form_start(categoryForm) }}
        {{ form_widget(categoryForm) }}
        <button type="submit" class="btn btn-success">Запис</button>
        {{ form_end(categoryForm) }}
            <h3>Добави промоция за категорията</h3>
            {{ form_start(promotionForm) }}
            {{ form_widget(promotionForm) }}
            {{ form_widget(promotionForm) }}
            <button type="submit" class="btn btn-success">Запипи промоцията</button>
            {{ form_end(promotionForm) }}
        </div>
        <div class="col-md-5 edit-product-img">
            {% if category.image|length > 0 %}
                <img width="100%" src="{{ asset('images/categories') }}/{{ category.id }}/{{ category.image }}" />
            {% else %}
                <h4>Няма качено изображение</h4>
            {% endif %}
        </div>
    </div>
{% endblock %}

