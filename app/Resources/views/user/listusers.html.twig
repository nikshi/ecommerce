{% extends 'layouts/backend.html.twig' %}

{% block title %}
    Потребители
{% endblock %}


{% block mainContent %}
    <h1>Управление на потребителите</h1>
    <a class="float-right" href="{{ path('user_register') }}"><button class="btn btn-primary">Добави потребител</button></a>
    <table class="table table-striped table-responsive">
        <thead>
        <tr>
            <td>{{ knp_pagination_sortable(users, 'ID', 'a.id') }}</td>
            <td>{{ knp_pagination_sortable(users, 'Име', 'a.name') }}</td>
            <td>{{ knp_pagination_sortable(users, 'Email', 'a.email') }}</td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td><a href="{{ path('edit_user', {'id': user.id}) }}"><button class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button></a></td>
                <td>
                    <form action="{{ path('delete_user') }}" method="POST">
                        <input type="hidden" name="id" value="{{ user.id }}">
                        <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(users) }}
    </div>
{% endblock %}

